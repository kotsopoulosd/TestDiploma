<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#c004526c">

    <TextView
        android:id="@+id/EventfullTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:textColor="#703ba8"
        android:text="Title:"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/EventfullDescription"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#703ba8"
        android:layout_alignWithParentIfMissing="true"
        android:ellipsize="marquee"
        android:text="Eventfull Description:"
        android:layout_below="@+id/EventfullTitle"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/Eventfullstart_time"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#703ba8"
        android:text="Start time"
        android:layout_below="@+id/EventfullDescription"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/Eventfullstop_time"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#703ba8"
        android:text="Stop time"
        android:layout_below="@+id/Eventfullstart_time"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/Eventfullvenue_name"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#703ba8"
        android:text="Venue name"
        android:layout_below="@+id/Eventfullstop_time"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/Eventfullvenue_address"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#703ba8"
        android:text="Venue address"
        android:layout_below="@+id/Eventfullvenue_name"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/Eventfullcity_name"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#703ba8"
        android:text="City"
        android:layout_below="@+id/Eventfullvenue_address"
        android:layout_alignParentEnd="true" />
</RelativeLayout>