<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#c004526c"
    tools:context="com.example.dkotsopoulos.testdiploma.ContextManager">

    <TextView
        android:text="Map Visualization Information"
        android:id="@+id/textView"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textStyle="bold"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:textColor="#fc000000"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/mapbutton"
        android:layout_below="@+id/textView"
        android:textColor="#fc000000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/simplebuttons"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowEvents"
        android:id="@+id/ShowEvents"
        android:layout_below="@+id/mapbutton"
        android:textColor="#fc000000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/simplebuttons"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:id="@+id/directionsbutton"
        android:layout_centerHorizontal="true"
        android:textColor="#fc000000"
        android:layout_below="@+id/ShowEvents"
        android:background="@drawable/simplebuttons"
        android:layout_marginBottom="10dp"/>

    <TextView

        android:text="Install/ Remove Shortcuts on Home screen manually"
        android:id="@+id/textView1"
        android:layout_below="@+id/directionsbutton"
        android:layout_marginTop="35dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textStyle="bold"
        android:shadowColor="#7000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:textColor="#fc000000"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shortcut"
        android:id="@+id/buttonAddShortcut"
        android:textColor="#fc000000"
        android:background="@drawable/simplebuttons"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Shortcut"
        android:id="@+id/buttonRemoveShortcut"
        android:textColor="#fc000000"
        android:background="@drawable/simplebuttons"
        android:layout_below="@+id/buttonAddShortcut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Time Tasks"
        android:textColor="#fc000000"
        android:id="@+id/stopalarmServicesbutton"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/stopbutton"/>

</RelativeLayout>
