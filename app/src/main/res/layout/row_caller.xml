<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:background="#c004526c">

<TextView
    android:id="@+id/Textphnumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_alignWithParentIfMissing="true"
    android:gravity="center_vertical"
    android:textColor="#703ba8"
    android:text="Phone Number:"
    android:textSize="16sp" />

<TextView
    android:textSize="16sp"
    android:layout_width="fill_parent"
    android:layout_height="26dip"
    android:textColor="#703ba8"
    android:ellipsize="marquee"
    android:singleLine="true"
    android:text="Call Duration:"
    android:id="@+id/Textcallduration"
    android:layout_below="@+id/TextcallGeo"
    android:layout_alignParentEnd="true"
    />


<TextView
    android:textSize="16sp"
    android:layout_width="fill_parent"
    android:layout_height="26dip"
    android:textColor="#703ba8"
    android:text="Call name"
    android:id="@+id/Textcallname"
    android:layout_below="@+id/Textcallduration"
    android:layout_alignParentEnd="true" />

<TextView
    android:textSize="16sp"
    android:layout_width="fill_parent"
    android:layout_height="26dip"
    android:textColor="#703ba8"
    android:text="Call type"
    android:id="@+id/Textcalltype"
    android:layout_below="@+id/Textcallname"
    android:layout_alignEnd="@+id/Textcalldate" />

<TextView
    android:textSize="16sp"
    android:layout_width="fill_parent"
    android:layout_height="26dip"
    android:textColor="#703ba8"
    android:text="Call Geolocation:"
    android:id="@+id/TextcallGeo"
    android:layout_below="@+id/Textphnumber"
    android:layout_alignParentEnd="true" />

<TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date"
    android:id="@+id/Textcalldate"
    android:layout_alignParentTop="true"
    android:textColor="#000000"
    android:layout_alignRight="@+id/Textphnumber"
    android:layout_alignEnd="@+id/Textphnumber" />

</RelativeLayout>