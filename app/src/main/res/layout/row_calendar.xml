<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:background="#c004526c">

    <TextView
        android:id="@+id/TCalendarEventName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:text="Event:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TCalendarEventDescription"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:textColor="#000000"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description:"
        android:layout_below="@+id/TCalendarEventName"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:id="@+id/TCalendarEventLocation"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:textColor="#000000"
        android:text="Location"
        android:layout_below="@+id/TCalendarEventDescription"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/TCalendarEventStartime"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:textColor="#0fa809"
        android:text="Starting:"
        android:layout_below="@+id/TCalendarEventLocation"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/TCalendarEventEndtime"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:textColor="#a80a13"
        android:text="Ending:"
        android:layout_below="@+id/TCalendarEventStartime"
        android:layout_alignParentEnd="true" />

</RelativeLayout>